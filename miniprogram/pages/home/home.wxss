/* width:calc(750rpx*100/375); */
page{
  background-color: #f3f3f3;
}
 .search{
   display: flex;
   flex-direction: row;
   width: 100%;
   background-color: #328EEB;
   justify-content: center;
 }
 .search>input{
   width:80%;
   text-align: center;
   background-color: #fff;
   border:1rpx solid black;
   padding: 10rpx;
   margin: 20rpx 0;
 }
 .search>image{
   width: 70rpx;
   height:70rpx;
   margin: 20rpx 0;
 }
 .banner{
   width: 100%;
 }
 .autoimg{
  width: 100%;
 }
 .container1{
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
   width: 100%;
   background-color: #fff;
   padding: 5rpx 0;
 }
 .container1>.product{
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   width: 50%;
   margin: 20rpx 0;
 }
 .container1>.product>image{
   height: 80rpx;
   width: 80rpx;
 }
 .container2{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  background-color: #fff;
  padding: 5rpx 0;
}
.container2>.product{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33%;
  margin: 20rpx 0;
}
.container2>.product>image{
  height: 120rpx;
  width: 120rpx;
}

 .tapimg1{  /*图片*/
  width: 70rpx;
  height:70rpx;
  margin: 20rpx 0;
}
.tapbtn1[plain]{/*按钮*/
  padding: 0;
  border:none;   
  width: 90rpx;
  height: 90rpx;
}
.recommend{
  width: 100%;
  height: 100rpx;
  margin: 30rpx 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.recommend>text{
   width: 100%;
   text-align: center;
   margin: 20rpx 0;
}